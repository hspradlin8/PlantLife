            </div>
            <div class="form-group">
                <label asp-for="Water" class="control-label"></label>
                <input asp-for="Water" class="form-control" />
                <span asp-validation-for="Water" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issues" class="control-label"></label>
                <input asp-for="Issues" class="form-control" />
                <span asp-validation-for="Issues" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <a asp-controller="DefaultPlants" asp-action="Index"></a>
                <input name="file" type="file" class="form-control" value="Image" />
                <img src="@("/Images/" + Model.Image)" alt="Plant Pic" style="max-width:150px" />
            </div>
