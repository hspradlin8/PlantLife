

@model Plant_Life.Models.ViewModel.PlantIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>My Plants</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Plant Name
            </th>
            <th>
                Sunlight
            </th>
            <th>
                Temperature
            </th>
            <th>
                Water
            </th>
            <th>
                Water Needs
            </th>
            <th>
                Description
            </th>
            <th>
                Issues
            </th>
            <th>
                Quantity
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Plants)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlantName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sunlight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Temperature)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Water)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WaterNeeds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Issues)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <img src="@("/Images/" + item.Image)" style="max-width: 150px" />
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |

                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
        @foreach (var item in Model.DefaultPlantUsers)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DefaultPlant.PlantName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DefaultPlant.Sunlight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DefaultPlant.Temperature)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DefaultPlant.Water)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DefaultPlant.WaterNeeds)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DefaultPlant.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DefaultPlant.Issues)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DefaultPlant.Quantity)
        </td>
        <td>
            <a asp-controller="Plants" asp-action="EditUserDefault" asp-route-id="@item.DefaultPlant.Id">Add An Image</a>
            @*<img src="@("/Images/" + item.Image)" style="max-width: 150px" />*@
        </td>
        <td>
            <a asp-controller="Plants" asp-action="EditUserDefault" asp-route-id="@item.DefaultPlant.Id">Edit</a> |
            <a asp-controller="Plants" asp-action="DeleteDefaultPlant" asp-route-id="@item.Id">Delete</a>

        </td>
    </tr>
        }
    </tbody>
</table>