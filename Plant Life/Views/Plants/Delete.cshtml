<div class="container">
    <div class="row justify-content-md-left">
            <div class="card border-secondary mb-3 col-6" style="max-width:20rem; margin: 9px; border-width:7px;">
                <h4><div class="card-header">@Html.DisplayFor(modelItem => Model.PlantName)</div></h4>
                <div class="card-body">
                    <h6 class="card-title"><strong>Sunlight</strong></h6>
                    <p class="card-text">@Html.DisplayFor(modelItem => Model.Sunlight)</p>
                    <h6 class="card-title"><strong>Temperature</strong></h6>
                    <p class="card-text">@Html.DisplayFor(modelItem => Model.Temperature)</p>
                    <h6 class="card-title"><strong>Water Needs</strong></h6>
                    <p class="card-text">@Html.DisplayFor(modelItem => Model.WaterNeeds)</p>
                    <h6 class="card-title"><strong>Issues</strong></h6>
                    <p class="card-text">@Html.DisplayFor(modelItem => Model.Issues)</p>
                    @if (Model.Image == null)
                    {
                        <p>No photo available</p>
                        <p> </p>
                        <a asp-controller="Plants" asp-action="Edit" asp-route-id="@Model.Id" class="btn-sm btn-success" style="margin-bottom: 6px !important; padding-bottom:6px;">Add An Image</a>
                    }
                    else
                    {
                        <img src="@("/Images/" + Model.Image)" style="max-width: 150px" />
                    }
                    <form asp-action="AddDefaultPlant">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <input type="submit" class="btn-sm btn-success" style="margin-bottom: 6px;" id="btn-@Model.Id" value="Add to My Plants" /> |
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-sm btn-secondary">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn-sm btn-secondary">Delete</a>
                    </form>
                </div>
            </div>
    </div>
</div>
